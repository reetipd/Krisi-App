<% include partials/nav %>

<body id="page-top">
    <h2 class=" masthead mt-5 mb-0 page-section-heading text-center text-uppercase text-secondary">Hi! <%= user.username %></h2>
    <% include ./partials/messages %>
    <div class="container">
        <div class="row">
            <div class="card mb-3" style="max-width: 580px;">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img class="bd-placeholder-img " width="100%" height="250" src="/images/buyer.png"
                            preserveAspectRatio="xMidYMid slice" role="img">
                        <title>Placeholder</title>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h6 class="card-title d-inline-block mr-3">Buyer:</h6>
                            <h5 class="d-inline-block"><%= user.username %></h5>

                            <p class="card-text">
                            <h6 class="d-inline-block pr-2">Contact: </h6><a href="#"><%= user.mobilenumber %></a><br>
                            <a href="#" class="ml-4 pl-5"><%= user.email %></a><br>
                            <a href="#" class="ml-5 pl-4">facebook.com/sumibhatta1</a><br><br>
                            <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% if(user.action === "buy") {%>
        <div class="container col-md-12 ml-5 mt-5 mb-5">
            <div class="row">
                <button type="button" class="btn btn-primary col-md-3 mr-5 p-3">Message</button>
                <button type="button" class="btn btn-secondary col-md-3 mr-5"><a
                        href="#">Add</a></button>
                <button type="button" class="btn btn-secondary col-md-3 mr-5"><a
                        href="#">Edit</a></button>
                <button type="button" class="btn btn-secondary col-md-3 mr-5"><a
                            href="/products/cart">Cart</a></button>

                            
            </div>
        </div>
        <% } %>
    </div>
    <% include partials/footer %>
</body>