                    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
            <form action="/products/cart/<%= productitem._id %>" method = "GET">
                <div class="col-md-4">
                    <h2>
                        <%= productitem.name %>
                    </h2>
                    <span>Price: <%= productitem.price %></span><br>
                    <div class="row">
                        <div class="col-md-2">
                            <label for="weight">Weight: </label>
                        </div>
                        <div class="col-md-6" style="margin-left: 6px;">
                            <select>
                                    <option selected>Select Weight:</option>
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                </select>
                        </div>
                    </div>
                    <h5>Stock : <%= productitem.stock %></h5>
                    <label for="quantity">Quantity : </label><input type="number" name="qty" id="qty" value="1" min="1" max="10000" style="margin-left: 10px;"><br>
                    
                    <button type="submit" class="btn btn-success" style="border-radius: 20px; margin: 8px;">Add to cart</button>
                </form>
                
                <button type="submit" class="btn btn-primary" style="border-radius: 20px; margin: 8px;">Message</button>
            </div>
